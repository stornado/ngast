root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = false
max_line_length = 100
tab_width = 2

[*.java]
indent_size = 4

[{*.cjs,*.js}]
max_line_length = 80

[{*.gradle,*.groovy,*.gant,*.gdsl,*.gy,*.gson}]
indent_size = 4
tab_width = 4

[{*.gradle.kts,*.kts,*.kt}]
indent_size = 4
tab_width = 4
